! vim:ts=8
XTerm*metaSendsEscape:		true
XTerm*utf8:			1
Xcursor.theme:			dmz
Xcursor.size:			36	

! Dracula Xresources palette
*.foreground: #F8F8F2
*.background: #282A36
*.color0:     #000000
*.color8:     #4D4D4D
*.color1:     #FF5555
*.color9:     #FF6E67
*.color2:     #50FA7B
*.color10:    #5AF78E
*.color3:     #F1FA8C
*.color11:    #F4F99D
*.color4:     #BD93F9
*.color12:    #CAA9FA
*.color5:     #FF79C6
*.color13:    #FF92D0
*.color6:     #8BE9FD
*.color14:    #9AEDFE
*.color7:     #BFBFBF
*.color15:    #E6E6E

xterm*renderFont: true
!xterm*faceName: spleen:pixelsize=24:antialias=false
xterm*faceName: Fantasque\ Sans\ Mono:pixelsize=24
!Emacs*font: Fantasque\ Sans\ Mono\ 9
xterm*scaleHeight: 1.2
XTerm*ScrollBar:		false
*.saveLines:			20000

*.XTerm.*.selectToClipboard:	true
*.XTerm.*.utmpInhibit:		true
! hide when i type
*.XTerm.*.pointerMode:		2

*.XTerm.*.allowSendEvents:	true
! this requires an xterm hack in ptyx.h
*.XTerm.*.allowTitleOps:	true

*.XTerm.*.title:		xterm
*.XTerm.*.termName:		xterm-256color

*.XTerm.*.visualBell:		false

! make xaw scrollbars act like normal ones
.XTerm.*.Scrollbar.translations: #override\
    <Btn1Down>: StartScroll(Continuous) MoveThumb() NotifyThumb() \n\
    <Btn2Down>: StartScroll(Forward) \n\
    <Btn3Down>: StartScroll(Backward) \n\
    <Btn1Motion>: MoveThumb() NotifyThumb() \n\
    <BtnUp>: NotifyScroll(Proportional) EndScroll()

SshAskpass*inputTimeout:	15
! enlarge fonts
SshAskpass*Dialog.font:		-adobe-helvetica-bold-r-normal-*-*-200-*-*-*-*-iso8859-1
SshAskpass*Button.font:		-adobe-helvetica-bold-r-normal-*-*-200-*-*-*-*-iso8859-1
