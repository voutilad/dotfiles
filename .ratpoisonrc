#
# ratpoison config
# by joshua stein <jcs@jcs.org>
#
# some of these settings require changes from my ratpoison tree:
# https://github.com/jcs/ratpoison
#

# call them as i sees them
set winname title

# keep the bar in the upper left displaying the active frame title
set barborder 0
set bargravity nw
set barpadding 14 10
set barinpadding 1
set barsticky on
set bgcolor black
set fgcolor #e3e0d5
set font monospace:size=12
set ignorehints on
set inputwidth 0
set msgwait 3
set onlyborder 0
set padding 0 40 0 0
set warp off
set winliststyle row
set winfmt %t

# add leading and trailing space around this now that the padding is small
set framefmt  frame %f (%wx%h) 

# window borders
set border 5
set gap 8
set fwcolor orange3
set bwcolor gray

# be like screen
escape C-a
bind s split
bind C-s split
bind S hsplit
bind C-S hsplit

bind c exec urxvt
bind C-c exec urxvt

# lock the screen
bind L exec xset s activate

# prevent accidental closes
unbind k

# swap workspaces, but define it in 'top' to avoid having to prefix with C-a
definekey top M-1 vselect 1
definekey top M-2 vselect 2
definekey top M-3 vselect 3
definekey top M-4 vselect 4

# match symbols on the keys of my current laptop as if Fn Lock were on, without
# having to actually enable Fn Lock
definekey top F1 exec ratpoison -c "echo `mixerctl outputs.master.mute=toggle`"
definekey top F2 exec ratpoison -c "echo `mixerctl outputs.master=-10`"
definekey top F3 exec ratpoison -c "echo `mixerctl outputs.master=+10`"
definekey top F5 exec ratpoison -c "echo backlight: `xbacklight -dec 5 -time 0; xbacklight | sed 's/\..*//'`"
definekey top F6 exec ratpoison -c "echo backlight: `xbacklight -inc 5 -time 0; xbacklight | sed 's/\..*//'`"

# allow machine-specific overrides of keys
source .ratpoisonrc.local

# i like tab just going between the same two windows
bind Tab focuslast
bind grave focus

# act normal but prevent firefox raising itself when links are opened from
# other apps
set rudeness 12

# let popups stay centered
unmanage xmessage
unmanage xprompt
unmanage OpenSSH Authentication Passphrase Request
unmanage dzen title

# startup configuration

# initialize workspaces
vinit
hsplit

exec urxvt
